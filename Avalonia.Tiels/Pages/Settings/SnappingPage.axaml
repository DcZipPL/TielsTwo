<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:Avalonia.Tiels.Resources"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.Tiels.Pages.Settings.SnappingPage">
	<Grid>
		<StackPanel Margin="10">
			<TextBlock FontSize="16" Foreground="{StaticResource BaseTitleColor}" Text="{x:Static p:Resources.SnappingLabel}"/>
			<WrapPanel Margin="0,10,0,10">
				<StackPanel>
					<Label Content="{x:Static p:Resources.Snapping}"/>
					<TextBox x:Name="SnappingBox" Width="160" HorizontalAlignment="Left"/>
				</StackPanel>
				<StackPanel Margin="10,0,0,0">
					<Label Content="{x:Static p:Resources.HandleSize}"/>
					<TextBox x:Name="HandleSizeBox" Width="240" HorizontalAlignment="Left"/>
				</StackPanel>
			</WrapPanel>
			<CheckBox x:Name="HideTileButtonsCheckBox" Content="{x:Static p:Resources.HideTileButtons}"/>
		</StackPanel>
		<WrapPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15">
			<TextBlock x:Name="StatusIcon" FontFamily="avares://Avalonia.Tiels/Assets#lucidelite" Padding="0,0,5,0">󿚚</TextBlock>
			<TextBlock x:Name="StatusText" Text="{x:Static p:Resources.NoChanges}"/>
		</WrapPanel>
	</Grid>
</UserControl>
