<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:p="clr-namespace:Avalonia.Tiels.Resources"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.Tiels.Pages.Settings.ThumbnailsPage">
	<Grid>
		<StackPanel Margin="10" Spacing="10">
			<Border BorderBrush="#FF0000" BorderThickness="1" CornerRadius="5">
				<ScrollViewer MinHeight="120">
					<StackPanel x:Name="ThumbnailPreviewContent" Margin="10" Height="120" Spacing="10" Orientation="Horizontal">
						
					</StackPanel>
				</ScrollViewer>
			</Border>
		</StackPanel>
		<WrapPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="15">
			<TextBlock x:Name="StatusIcon" FontFamily="avares://Avalonia.Tiels/Assets#lucidelite" Padding="0,0,5,0">󿚚</TextBlock>
			<TextBlock x:Name="StatusText" Text="{x:Static p:Resources.NoChanges}"/>
		</WrapPanel>
	</Grid>

</UserControl>
