<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:Avalonia.Tiels.Controls"
        xmlns:p="clr-namespace:Avalonia.Tiels.Resources"
        xmlns:pagesCreate="clr-namespace:Avalonia.Tiels.Pages.Create"
        xmlns:pagesSettings="clr-namespace:Avalonia.Tiels.Pages.Settings"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.Tiels.SettingsWindow"
        Width="1000" Height="550"
        Title="Tiels">
        <Grid>
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="2.8*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!-- Side Navbar -->
                <Border BorderThickness="0,0,0.6,0" BorderBrush="{StaticResource BaseBorderColor}">
                        <StackPanel>
                                <controls:SidebarCategory Title="{x:Static p:Resources.CreateLabel}"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.CreateTile}" x:Name="SB_CT"                Icon="󿞐"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.CreateDirectoryPortal}" x:Name="SB_CDP"    Icon="󿚕"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.CreateFloatingImage}" x:Name="SB_CFI"      Icon="󿚒" IsEnabled="False"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.CreateNote}" x:Name="SB_CN"                Icon="󿚒" IsEnabled="False"/>
                                
                                <controls:SidebarCategory Title="{x:Static p:Resources.SettingsLabel}"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.SettingsGeneral}" x:Name="SB_SG"           Icon="󿚓"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.SettingsAppearance}" x:Name="SB_SA"        Icon="󿚐"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.SettingsUpdates}" x:Name="SB_SU"           Icon="󿚖"/>
                                
                                <controls:SidebarCategory Title="{x:Static p:Resources.ManagementLabel}"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.ManagementTiles}" x:Name="SB_MT"           Icon=""/>
                                <controls:SidebarButton Text="{x:Static p:Resources.ManagementFloatingImages}" x:Name="SB_MFI" Icon="" IsEnabled="False"/>
                                <controls:SidebarButton Text="{x:Static p:Resources.ManagementNotes}" x:Name="SB_MN"           Icon="" IsEnabled="False"/>
                        </StackPanel>
                </Border>
                <!-- Content -->
                <Border Grid.Column="1"
                        BorderThickness="0,0.6,0.6,0.6" BorderBrush="{StaticResource BaseBorderColor}"
                        IsVisible="True">
                        <Border.Background><SolidColorBrush Color="#0A000000"></SolidColorBrush></Border.Background>
                        <Grid x:Name="Frame">
                                <pagesSettings:GeneralPage x:Name="GeneralSettingsPage" IsVisible="False"/>
                                <pagesSettings:AppearancePage x:Name="AppearanceSettingsPage" IsVisible="False"/>
                                <pagesSettings:UpdatesPage x:Name="UpdatesSettingsPage" IsVisible="False"/>
                                <pagesCreate:QuickTilePage x:Name="TileCreatePage" IsVisible="False"/>
                                <pagesCreate:DirectoryPortalPage x:Name="DirectoryPortalPage" IsVisible="False"/>
                                <pagesCreate:DirectoryPortalPage x:Name="FloatingImagePage" IsVisible="False"/>
                                <pagesCreate:DirectoryPortalPage x:Name="NotesPage" IsVisible="False"/>
                        </Grid>
                </Border>
        </Grid>
</Window>
